{
  "name": "tg-name-collector-bot",
  "version": "1.0.0",
  "description": "Telegram bot to collect user names with Telegraf, Winston logging, and SQLite storage. Includes admin bot for stats and export.",
  "main": "dist/bot/index.js",
  "types": "dist",
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/bot/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/bot/index.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.4.5",
    "telegraf": "^4.16.3",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.7.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
